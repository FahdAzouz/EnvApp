<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/cpuLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cpu_usage"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
        android:id="@+id/cpuProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cpuLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/cpuPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/default_percentage"
        app:layout_constraintTop_toBottomOf="@id/cpuProgressBar"
        app:layout_constraintEnd_toEndOf="@id/cpuProgressBar"/>

    <TextView
        android:id="@+id/ramLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ram_usage"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cpuPercentage"
        app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
        android:id="@+id/ramProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/ramLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/ramPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/default_percentage"
        app:layout_constraintTop_toBottomOf="@id/ramProgressBar"
        app:layout_constraintEnd_toEndOf="@id/ramProgressBar"/>

    <TextView
        android:id="@+id/intensityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/simulation_intensity"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ramPercentage"
        app:layout_constraintStart_toStartOf="parent"/>

    <SeekBar
        android:id="@+id/intensitySlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintTop_toBottomOf="@id/intensityLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/intensityPercentage"/>

    <TextView
        android:id="@+id/intensityPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_intensity"
        android:minWidth="50dp"
        app:layout_constraintTop_toTopOf="@id/intensitySlider"
        app:layout_constraintBottom_toBottomOf="@id/intensitySlider"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/simulationSwitch"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/start_simulation"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/intensitySlider"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/simulationSwitch"
        app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
    android:id="@+id/loadingIndicator"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    app:layout_constraintBottom_toTopOf="@+id/statusText"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/updateButton"
    app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/status_idle"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loadingIndicator" />

</androidx.constraintlayout.widget.ConstraintLayout>